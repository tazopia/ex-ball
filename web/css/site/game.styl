

table.game {
	box-shadow none

	img, span {
		vertical-align middle
	}

	tbody.group:before {
		content ''
		display block
		height 15px
		//background #565658
	}

	tr.off {
		td {
			background #464547 !important
			cursor auto !important
		}
	}

	td {
		transition(all 0.2s ease-out)
		padding 0 10px

		&.league {
			padding 0
			background transparent // #262527
			color #fff
			text-align left
			height 40px
			font-weight 600
			border-right none
			border-left none
			text-shadow 0 0 3px #000

			img {
				margin-right 8px

				&.flag {
					margin-left 20px
				}
			}

			p {
				display inline-block
				min-width 176px
			}

			.cnt {
				height 20px
				line-height 20px
				display inline-block
				margin-left 20px
				vertical-align middle
				background-color #dc0405
				padding 0 1px
				border-radius 12px
			}

			.btn {
				float right
				position relative
				padding 0 40px 0 0
				width 116px
				text-align center

				em {
					background rgba(0, 0, 0, 0.5)
					position absolute
					right 1px
					top 1px
					height 22px
					line-height 22px
					width 40px
					padding-right 6px
					text-align right
				}
			}
		}

		&.date {
			span {
				color #5bc0de
			}
		}

		&.home {
			color #fff
			text-align left
			.odds {
				display inline-block
				float right
				font-weight 600
				color #ee5f5b
			}
		}

		&.draw {
			&.bet {
				color #ee5f5b
			}
		}

		&.away {
			color #fff
			text-align right
			.odds {
				display inline-block
				float left
				font-weight 600
				color #ee5f5b
			}
		}

		&.bet {
			position relative
			background #363537
			cursor pointer
			&:hover {
				background #000
			}

			&.on {
				background #dc0405
				color #fff

				* {
					color #fff
				}
			}

			a {
				position absolute
				top 0
				right 0
				bottom 0
				left 0
			}
		}

		&.over {
			background #262527
			color #ee5f5b
			margin 0 6px
		}

		&.under {
			background #262527
			color #5bc0de
			margin 0 6px
		}

		&.score {
			color #fff
			box-shadow(inset 0 0 40px 1px #000)
		}
	}

	tr.item {
		td.home, td.draw, td.away {
			background #363537
			&.bet {
				background #ee5f5b
				color #fff
				* {
					color #fff
				}
			}
			&.on {
				//box-shadow(inset 0 0 0 1px #fff)
				box-shadow(inset 0 0 0 1px #ff6600)
			}

			&.hit {
				background #dc0405
				color #fff

				&.odds {

				}

				* {
					color #fff
				}
			}
		}

		td.vs {
			&.hit {
				background #dc0405
				color #fff

				&.odds {

				}

				* {
					color #fff
				}
			}
		}

		td.info {
			img {
				margin-right 8px
			}
		}

		td.odds {
			color #ee5f5b
			font-weight 600
		}

		td.result {
			&.ing, &.closing {
				color #fff
			}

			&.win {
				color #63a001
			}

			&.lose {
				color #ff6600
			}

			&.hit {
				color #5bc0de
			}

			&.cancel {
				color #ee5f5b
			}
		}
	}

	td.betInfo {
		background transparent
		border none
		text-align left
		padding 6px 0 20px 0
		font-size 14px
		text-shadow 0 0 3px #000

		span {
			display inline-block
			color #fff

			.money {
				color #62c462
				font-weight 600
				vertical-align baseline
			}

			.hit {
				color #ff5f5b
				font-weight 600
				vertical-align baseline
			}

			&.dateDay {
				margin-left 20px
			}

			&.dateTime {
				color #f89406
			}

			&.betMoney, &.rate, &.expMoney, &.hitMoney {
				margin-left 20px
			}

			&.btn-box {
				display inline-block
				float right
				font-size 13px
				margin-top 2px
			}
		}

		input {
			width 20px
			height 20px
			padding 0
		}
	}
}

ul.sports {
	float right
	height 30px
	li {
		float left
		padding-left 20px
		cursor pointer
		height 24px
		line-height 24px

		em {
			vertical-align middle
			display inline-block
			background-color #dc0405
			padding 0 7px
			border-radius 10px
			margin-left 10px
		}

		img {
			vertical-align middle
		}
	}
}

#left-league {
	display block
	position absolute
	top 70px
	left 50%
	margin-left -850px

	ul {
		display none

		&.on {
			display block
		}
	}

	li {
		display block

		.cnt {
			float right
			display block
			background-color #dc0405
			height 18px
			line-height 18px
			padding 0 7px
			border-radius 10px
			margin-top 6px
		}

		p {
			width 200px
			padding 0 10px
			height 28px
			line-height 28px
			cursor pointer
			background #363537
			margin 1px 0

			&.top {
				height 32px
				line-height 32px
				font-weight 600
				background #262527

				.cnt {
					margin-top 8px
				}
			}

			&.league {
				padding-left 16px
				background #565658
			}
		}
	}
}

#game-cart {
	&.fixed {
		#clock, .cart-wrap {
			position fixed
			margin-bottom 0
		}
	}
}

#clock {
	margin-bottom 6px
}

.cart-wrap {
	top 176px

	width 220px
	font-size 13px
	.cart-top {
		font-size 14px
		font-weight 600
		background #363537
		height 40px
		line-height 40px
		padding 0 10px

		label {
			float right
		}
	}
	.cart-odds {
		margin-top 4px
		padding 10px
		background #464547
		p {
			height 24px
			line-height 24px
			color #fff

			input {
				width 120px
				height 22px
				text-align right
				font-size 14px
				padding 0
				color #fff
				background #000
			}

			span {
				display inline-block
				float right
			}

			em {
				color #b3b03b
				font-weight 600
			}
		}
	}
	.cart-amount {
		overflow hidden
		margin-top 2px
		li {
			float left
			display block
			width 32%
			margin-top 2px
			margin-bottom 2px

			.btn {
				width 100%
				padding 0
				text-align center
				height 32px
				line-height 32px
				//background #005e81
				border solid 1px rgba(0,0,0,0.4)
			}

			&:nth-child(3n + 2) {
				margin-left 2%
				margin-right 2%
			}
		}
	}
	.cart-betting {
		margin-top 2px
		.btn {
			border-radius 5px
			width 100%
			text-align center
			font-size 16px
			height 42px
			line-height 42px
			background #ee3729
			//background url(/images/btn-bg.png) center top no-repeat
			color #fff
			font-weight 600

			&:hover {
				background darken(#ee3729, 16%)
				//background url(/images/btn-bg.png) center bottom no-repeat
				//background-position-y bottom
			}

			em {
				margin-left 2px
				font-size 13px
				display inline-block
				height 22px
				line-height 20px
				vertical-align middle
				background #363537
				padding 0 8px
				border-radius 50%
			}
		}
	}
	.cart-item {
		div {
			margin-top 4px
			padding 10px
			position relative
			background #464547

			&.bonus {
				background #363537
				span {
					color #5bc0de
				}
			}
		}
		.btn {
			padding 0 6px
			position absolute
			height 20px
			line-height 20px
			right 10px
			top 8px
			background #dc0405
			color #fff

			&:hover {
				background darken(#dc0405, 16%)
			}
		}
		p {
			height 18px
			line-height 18px

			&.odds {
				margin-bottom 8px
				color #fff

				img {
					vertical-align middle
				}
				span {
					float right
					padding-right 16px
					color #5bc0de
				}
			}

			&.zone {
				padding-left 20px
				color #5bc0de
			}
		}
	}
}

.ladder-result {
	background url(/images/ladder-result.png)
	display inline-block
	width 26px
	height 26px

	&.s1 {
		background-position 0 0
	}

	&.s2 {
		background-position -26px 0
	}

	&.s3 {
		background-position -52px 0
	}

	&.s4 {
		background-position -78px 0
	}
}

.lowhi-result {
	background url(/images/lowhi-result.png)
	display inline-block
	width 50px
	height 25px

	&.s1 {
		background-position 0 0
	}

	&.s2 {
		background-position -50px 0
	}

	&.s3 {
		background-position -100px 0
	}

	&.s4 {
		background-position -150px 0
	}
}