	.box {
		margin 0
	}
}

div.payment {
	text-align center
	.btn {
		font-size 18px
		line-height 38px
		height 40px
		width 200px
		border-radius 10px

		//background url(/images/btn-bg.jpg) center top no-repeat //#59a735
