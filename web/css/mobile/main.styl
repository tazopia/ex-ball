	position relative
	margin 0 -6px
	background rgba(0,0,0,0.3)
	padding 20px
	border-top solid 1px rgba(255,255,255,0.1)
	border-bottom solid 1px rgba(0,0,0,0.5)

	p {
		font-size 13px
		line-height 1.4
	}

	div {
		text-align center
	}

	.btn {
		width auto
		display inline-block
		height 40px
		line-height 40px
		padding 0 20px
